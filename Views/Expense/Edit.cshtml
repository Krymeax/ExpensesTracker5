@model ExpensesTracker5.Models.ExpenseModel

<script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css" rel="stylesheet">
<div>
    <div class="row">
        <div class="col-md-8">
            <form id="expenseForm" method="post">
                <div>
                    <input asp-for="ExpenseId" type="hidden" />
                    <div class="form-group">
                        <label asp-for="ExpenseName" class="control-label">Expense Name</label>
                        <input asp-for="ExpenseName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Category" class="control-label"></label>
                        <select asp-for="Category" class="form-control">
                            <option value="">-- Select Category --</option>
                            <option value="Utilities">Utilities</option>
                            <option value="Payrolls">Payrolls</option>
                            <option value="Rent">Rent</option>
                            <option value="Bank rates">Bank rates</option>
                            <option value="Maintenance">Maintenance</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Amount" class="control-label"></label>
                        <input asp-for="Amount" class="form-control" />
                    </div>
                    <div class="form-group" id="calender-container">
                        <label asp-for="ExpenseDate" class="control-label">Expense Date</label>
                        <div class="input-group date">
                            <input asp-for="ExpenseDate" type="date" class="form-control"><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Expired" class="control-label">Expire DEBUG</label>
                        <div class="input-group date">
                            <input asp-for="Expired" type="checkbox" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="IsCompleted" class="control-label"> IsCompleted DEBUG</label>
                        <div class="input-group date">
                            <input asp-for="IsCompleted" type="checkbox" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col">
                            @*<button type="button" id="btnSubmit" class="btn btn-block btn-info">Save</button>*@
                            <input type="submit" class="btn btn-block btn-info w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-secondary w-100">Back</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>